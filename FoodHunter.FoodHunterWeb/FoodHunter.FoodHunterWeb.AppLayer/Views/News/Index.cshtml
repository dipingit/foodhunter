@model IEnumerable<FoodHunter.Web.AppLayer.ViewModels.List.NewsListViewModel>

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout_Restaurant_Admin.cshtml";
}

<h2>News</h2>

<p>
    @Html.ActionLink("Create News", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NewsPicture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NewsPicture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.NewsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NewsId }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.NewsId  })
        </td>
    </tr>
}

</table>
